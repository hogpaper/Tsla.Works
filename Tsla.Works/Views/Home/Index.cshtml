@model Vehicles
@{
    ViewData["Title"] = "Home Page";
}

@section scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            $('#WakeButton').click(function () {
                waitingDialog.show('Waking Tesla...');
                debugger;
                data = { id: $("#vehicles option:selected").val()};

                AjaxCall('@Url.Action("Wake", "Home")', data, 'POST', CommandWaiting);
            });

            $('#StopChargingButton').click(function () {
                waitingDialog.show('Stopping Charging...');
                debugger;
                data = { id: $("#vehicles option:selected").val()};

                AjaxCall('@Url.Action("StopCharging", "Home")', data, 'POST', CommandWaiting);
            });

            $('#StartChargingButton').click(function () {
                waitingDialog.show('Starting to Charge...');
                debugger;
                data = { id: $("#vehicles option:selected").val()};

                AjaxCall('@Url.Action("StartCharging", "Home")', data, 'POST', CommandWaiting);
            });
        });


        function CommandWaiting(data) {
            debugger;
            if (data != true) {
                data = { id: $("#vehicles option:selected").val() };
                AjaxCall('@Url.Action("IsAwake", "Home")', data, 'POST', CommandWaiting);
            }
            else {
                CommandDone(data);
            }
        };

        function CommandDone(data) {
            waitingDialog.hide();
        }

        function AjaxCall(url, data, method, successFunction) {
            $.ajax({
                url: url,
                type: method,
                data: data, //{ file: signature },
                traditional: true,
                error: function (e, t, m) {
                    if (t === "timeout") {
                        alert("Your connection to the internet has been interrupted. Data not saved.");
                        $(document).children().remove();
                        window.location.href = "/Home/Logout";
                    } else {
                        alert("Error. Data not saved. " + e.responseText);
                    }
                },
                dataType: "json",
                success: function (data, x, y) {
                    if (x != "success") {
                        debugger;
                        alert("Error. Data not saved.");
                    }
                    else {
                        successFunction(data);
                    }
                }
            });
        };
    </script>
    }

    <div class="row">
        <div class="col-sm-3">
            <select class="form-control" id="vehicles">
                @{
                    foreach (Response t in Model.response)
                    {
                        <option value="@t.id">@t.display_name</option>
                    }
                }
            </select>
        </div>
    </div>
    <button type="button" id="WakeButton" value="Wake" class="button">Wake</button>
    <button type="button" id="StopChargingButton" value="Wake" class="button">Stop Charging</button>
    <button type="button" id="StartChargingButton" value="Wake" class="button">Start Charging</button>
